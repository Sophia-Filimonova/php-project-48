#!/usr/bin/env php
<?php

$autoloadPath = __DIR__ . '/../vendor/autoload.php';
require_once $autoloadPath;

use function Gendiff\Cli\parseArguments;
use function Gendiff\Differ\genDiff;

$args = parseArguments();
print_r($args);
$diff = genDiff($args['<firstFile>'], $args['<secondFile>'], $args['--format']);
print_r($diff);

