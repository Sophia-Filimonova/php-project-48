#!/usr/bin/env php
<?php

$autoloadPath = __DIR__ . '/../vendor/autoload.php';
require_once $autoloadPath;

use function Differ\Cli\parseArguments;
use function Differ\Differ\genDiff;

$args = parseArguments();
$diff = genDiff($args['<firstFile>'], $args['<secondFile>'], $args['--format']);
print_r($diff);
echo "\n";

